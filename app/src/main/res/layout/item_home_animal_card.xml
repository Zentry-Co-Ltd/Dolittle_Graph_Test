<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:elevation="1dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_home_card_selected"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/circle_white"
                    android:elevation="1dp"
                    android:src="@drawable/icon_pet_paws_blue"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@+id/img_home_card_animal_photo"
                    app:layout_constraintTop_toTopOf="@+id/img_home_card_animal_photo" />

                <ImageView
                    android:id="@+id/img_home_card_animal_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="@null"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_dog"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_home_card_animal_name"
                style="@style/textView_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="호두"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_home_card_animal_breed"
                style="@style/textView_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="말티즈"
                android:textColor="@color/color_normal_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_home_card_animal_sex"
                style="@style/textView_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="수컷 (중성화)"
                android:textColor="@color/color_normal_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_home_card_animal_age"
                style="@style/textView_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1년 1개월"
                android:textColor="@color/color_normal_gray"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>