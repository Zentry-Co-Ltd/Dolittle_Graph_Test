<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightAddFragment">

    <TextView
        android:id="@+id/textView20"
        style="@style/textView_black_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:gravity="center"
        android:text="@string/obj_weight_add_title"
        android:textSize="@dimen/title_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_weight_add"
        style="@style/custom_editText"
        android:layout_width="0dp"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="@string/obj_weight_add_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/obj_weight_kg"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_weight_add"
        app:layout_constraintStart_toEndOf="@+id/et_weight_add"
        app:layout_constraintTop_toTopOf="@+id/et_weight_add" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_weight_add_save"
        style="@style/buttonText"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_full_height"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_main_sqaure"
        android:text="@string/glb_save"
        android:textColor="@color/btn_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_weight_add"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_weight_add_cancel"
        style="@style/buttonText"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_full_height"
        android:background="@drawable/btn_gray_square"
        android:text="@string/glb_cancel"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn_weight_add_save"
        app:layout_constraintStart_toEndOf="@+id/btn_weight_add_save"
        app:layout_constraintTop_toTopOf="@+id/btn_weight_add_save"
        app:layout_constraintWidth_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>