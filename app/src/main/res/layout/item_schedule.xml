<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/round_white_20"
    android:elevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="심장병 약"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_scd_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="오후 02:00"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_scd_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_scd_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_scd_time"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_item_week0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />

        <TextView
            android:id="@+id/tv_item_week1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />

        <TextView
            android:id="@+id/tv_item_week2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week2"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />

        <TextView
            android:id="@+id/tv_item_week3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week3"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />

        <TextView
            android:id="@+id/tv_item_week4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week4"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />

        <TextView
            android:id="@+id/tv_item_week5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week5"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />

        <TextView
            android:id="@+id/tv_item_week6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/weekday_gap"
            android:text="@string/obj_scd_add_week6"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_scd_alarm"
            app:layout_constraintTop_toBottomOf="@+id/img_scd_alarm" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_scd_alarm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_scd_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_alarm"
        app:tint="@color/color_normal_gray" />


</LinearLayout>