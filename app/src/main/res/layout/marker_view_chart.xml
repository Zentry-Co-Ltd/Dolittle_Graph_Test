<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_marker_view_chart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_light_red_nc_10"
    android:orientation="vertical"
    android:padding="5dp">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/tv_marker_today"
            android:layout_columnSpan="2"
            android:text="@string/glb_temp_date"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:text="@string/obj_chart_maker_avg"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_marker_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="avg"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:text="@string/obj_chart_maker_sd"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_marker_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="sd"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </GridLayout>


</RelativeLayout>