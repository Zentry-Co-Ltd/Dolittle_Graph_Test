<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_Moon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor1</item>
        <item name="colorPrimaryVariant">@color/mainColor1_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/StatusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/StatusBarColor</item>

    </style>

    <style name="buttonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textView_main_color_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mainColor1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView_black_bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_sub_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="card_sub_content">
        <item name="android:textColor">@color/color_normal_gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textView_ani_reg_sub_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalenderViewCustom" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/mainColor1_light</item>
        <item name="colorPrimary">@color/mainColor1_light</item>
    </style>

    <style name="CalenderDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/mainColor1</item>
        <item name="colorOnPrimary">@color/mainColor1</item>
    </style>

    <style name="custom_editText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">#50000000</item>
        <item name="android:foregroundTint">#50000000</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
    </style>

    <style name="custom_dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#90000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/custom_PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/custom_NegativeButtonStyle</item>
    </style>

    <style name="custom_NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="custom_PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/mainColor1</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Dialog Style -->
    <style name="DolittleDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#90000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/mainColor1</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- BottomSheetDialog -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ConnectingPopupSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_right_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_right_exit</item>
    </style>

</resources>